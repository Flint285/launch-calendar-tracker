# Database Configuration
# Choose database type: 'postgres' or 'sqlite'
DATABASE_TYPE=sqlite

# PostgreSQL settings (used when DATABASE_TYPE=postgres)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/launch_tracker

# SQLite settings (used when DATABASE_TYPE=sqlite)
# Path to SQLite database file (created automatically)
SQLITE_PATH=./data/launch-tracker.db

# Auth
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Server
PORT=3001
NODE_ENV=development

# Frontend
VITE_API_URL=http://localhost:3001/api
